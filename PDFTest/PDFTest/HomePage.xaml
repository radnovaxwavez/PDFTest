<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDFTest.HomePage"
             NavigationPage.HasNavigationBar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackLayout Grid.Row="0" Orientation="Horizontal" WidthRequest="800">
            <ImageButton Source="BackArrow.png" HorizontalOptions="StartAndExpand" Clicked="ExitButton" BackgroundColor="Transparent"/>
            <ImageButton Source="Settings.png" HorizontalOptions="End" Clicked="SettingsButton" BackgroundColor="Transparent"/>
        </StackLayout>
        

        <StackLayout Grid.Row="1" VerticalOptions="End" Margin="20, 0, 20, 250" Spacing="20">
            <Button Text="Document 1" Clicked="Document1Button" BackgroundColor="Transparent" BorderWidth="2" BorderColor="#1976D2" CornerRadius="10"/>
            <Button Text="Document 2" Clicked="Document2Button" BackgroundColor="Transparent" BorderWidth="2" BorderColor="#1976D2" CornerRadius="10"/>
            <Button Text="Document 3" Clicked="Document3Button" BackgroundColor="Transparent" BorderWidth="2" BorderColor="#1976D2" CornerRadius="10"/>
        </StackLayout>

    </Grid>
    
    
</ContentPage>